      function convertUTCToLocalTime(hour, timezone) {
        const utcDate = new Date(Date.UTC(1970, 0, 1, hour, 0));
        const options = { timeZone: timezone, hour: 'numeric', hour12: true };
        return new Intl.DateTimeFormat(navigator.language, options).format(utcDate);
      }
      
      (timezone => {
        const localStartHour = convertUTCToLocalTime(0, timezone);
        const localEndHour = convertUTCToLocalTime(9, timezone);
        window.workhours.textContent = `${localStartHour} - ${localEndHour} (${timezone})`; 
      })(Intl.DateTimeFormat().resolvedOptions().timeZone);

      

    
